<div class="container">
<%= form_for(@lista) do |f| %>
  <% if @lista.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lista.errors.count, "erro") %> na nova lista!</h2>

      <ul>
      <% @lista.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :descricao %><br>
    <%= f.text_area :descricao, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class:"btn btn-primary" %>
  </div>
<% end %>
</div>
